html,
body,
canvas
    width 100%
    height 100%
    margin 0
    padding 0
    position relative
    overflow hidden

body
    background #2c3e50

h1.title
    font-family 'Brandon'
    font-weight 600
    font-size 10vh
    color #ffffff
    text-transform uppercase
    position absolute
    top 50vh
    left 50%
    transform translate( -50%, -30% )
    z-index 2
    margin 0

    cursor pointer

    opacity 0
    visibilty hidden
    transition opacity 0.5s cubic-bezier( 0.250, 0.460, 0.450, 0.940 ) 0.3s, // easeOutQuad
               transform 0.5s cubic-bezier( 0.250, 0.460, 0.450, 0.940 ) 0.3s // easeOutQuad

    &:after
        position absolute
        display block
        content ''
        width 0%
        height 0.2vh
        left 50%
        bottom 0
        background #ffffff
        transform translateX( -50% )
        transition width 0.3s cubic-bezier( 0.250, 0.460, 0.450, 0.940 ) // easeOutQuad

    &.show
        opacity 1
        visibilty visible
        transform translate( -50%, -50% )

        &:hover:after
            width 100%

p.end
    font-family 'Brandon'
    font-weight 600
    font-size 10vh
    color #ffffff
    text-transform uppercase
    position absolute
    top 50vh
    left 50%
    transform translate( -50%, -30% )
    z-index 1
    margin 0

    opacity 0
    visibilty hidden
    transition all 0.5s cubic-bezier( 0.250, 0.460, 0.450, 0.940 ) // easeOutQuad

    &.show
        opacity 1
        visibilty visible
        transform translate( -50%, -50% )

