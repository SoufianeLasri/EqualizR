html,
body,
canvas
    width 100%
    height 100%
    margin 0
    padding 0
    position relative
    overflow hidden

body
    background #2c3e50

h1.title,
button.start
    font-family 'Brandon'
    font-weight 600
    font-size 10vh
    color #ffffff
    text-transform uppercase
    position absolute
    top 40vh
    left 50%
    transform translate( -50%, -30% )
    z-index 1
    opacity 0
    transition all 1s cubic-bezier( 0.250, 0.460, 0.450, 0.940 ) // easeOutQuad

    &.show
        opacity 1
        transform translate( -50%, -50% )

button.start
    font-weight 300
    font-size 2vh
    top 55vh
    border none
    background none
    outline none

    &:after
        position absolute
        display block
        content ''
        width 0%
        height 0.2vh
        left 50%
        bottom 0
        background #ffffff
        transform translateX( -50% )
        transition width 0.3s cubic-bezier( 0.250, 0.460, 0.450, 0.940 ) // easeOutQuad

    &:hover
        &:after
            width 100%
